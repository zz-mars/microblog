extends layout

block content
	form.form-horizontal(method='post')
		fieldset
			legend user register
			div.control-group
				label.control-label(for='username') username
				div.controls
					input.input-xlarge(type='text',id='username',name='username')
					p.help-block your account name,used in logining&display
			div.control-group
				label.control-label(for='password') password
				div.controls
					input.input-xlarge(type='password',id='password',name='password')
			div.control-group
				label.control-label(for='password-repeat') repeat password
				div.controls
					input.input-xlarge(type='password',id='password-repeat',name='password-repeat')
			div.form-actions
				button.btn.btn-primary(type='submit') register

